{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": [
            "warn",
            {
                "format": [
                    "camelCase",
                    "PascalCase",
                    "snake_case",
                    "UPPER_CASE"
                ]
            }
        ],
        "@typescript-eslint/semi": "warn",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "off",
        "prefer-template": "warn",
        "no-multi-spaces": 2
    },
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts",
        "front_end"
    ]
}